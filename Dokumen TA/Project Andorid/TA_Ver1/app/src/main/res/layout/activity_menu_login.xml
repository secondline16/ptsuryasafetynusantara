<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/abuabu"
    android:gravity="center"
    tools:context=".MenuLogin">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <ImageView
                android:layout_width="250dp"
                android:layout_height="150dp"
                android:id="@+id/logo"
                android:src="@drawable/logo_pt"
                android:layout_centerHorizontal="true"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/logo"
                android:id="@+id/describe"
                android:text="Silahkan Login Terlebih dahulu!"
                android:textColor="@color/black"
                android:textSize="16sp"
                android:layout_centerHorizontal="true"/>

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/describe"
                android:id="@+id/input"
                android:layout_marginRight="30dp"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:background="@drawable/rectangle_root"
                android:elevation="3dp"
                android:layout_centerVertical="true">

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:drawableLeft="@drawable/logo_username"
                    android:drawablePadding="10dp"
                    android:id="@+id/username"
                    android:hint="Username"
                    android:backgroundTint="@color/white"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="2dp"
                    android:layout_below="@id/username"
                    android:id="@+id/saparator"
                    android:background="@color/abuabu"/>

                <EditText
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/saparator"
                    android:drawableLeft="@drawable/logo_password"
                    android:drawablePadding="10dp"
                    android:backgroundTint="@color/white"
                    android:hint="***********"/>
            </RelativeLayout>

            <Button
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginTop="10dp"
                android:layout_below="@+id/input"
                android:id="@+id/button_login"
                android:layout_centerHorizontal="true"
                android:backgroundTint="@color/biru"
                android:text="LOGIN"
                android:textSize="16sp"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/button_login"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10dp">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tidak Punya Akun? "
                    android:textColor="@color/black"
                    android:textSize="16sp"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/buat_akun"
                    android:text=" Buat Akun"
                    android:textColor="@color/biru"
                    android:textSize="18sp"/>
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>
</RelativeLayout>